# ========================================
# CONFIGURACIÓN DE ENTORNO
# ========================================
NODE_ENV=development
PORT=3750

# ========================================
# BASE DE DATOS - DESARROLLO LOCAL
# ========================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=aimec_db
DB_USER=postgres
DB_PASSWORD=tu_password
DB_SCHEMA=public

# ========================================
# BASE DE DATOS - PRODUCCIÓN (RAILWAY)
# ========================================
# Descomenta y configura para producción
# DB_HOST=tu-railway-host.railway.app
# DB_PORT=5432
# DB_NAME=railway
# DB_USER=postgres
# DB_PASSWORD=tu-railway-password
# DB_SCHEMA=public

# ========================================
# JWT (JSON WEB TOKENS)
# ========================================
JWT_SECRET=tu_jwt_secret_super_seguro
JWT_EXPIRES_IN=24h

# ========================================
# AWS (PARA DOMINIO Y ALMACENAMIENTO)
# ========================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=tu_aws_access_key
AWS_SECRET_ACCESS_KEY=tu_aws_secret_key

# ========================================
# ALMACENAMIENTO DE IMÁGENES
# ========================================

# Opción 1: AWS S3 (Recomendado)
AWS_S3_BUCKET=tu-bucket-s3
AWS_S3_REGION=us-east-1

# Opción 2: Cloudinary
CLOUDINARY_CLOUD_NAME=tu_cloud_name
CLOUDINARY_API_KEY=tu_api_key
CLOUDINARY_API_SECRET=tu_api_secret

# Opción 3: Vercel Blob Storage
BLOB_READ_WRITE_TOKEN=tu_vercel_blob_token

# Opción 4: Railway Storage
RAILWAY_STORAGE_URL=tu_railway_storage_url

# ========================================
# CORS (CROSS-ORIGIN RESOURCE SHARING)
# ========================================
# URLs permitidas para CORS
CORS_ORIGIN=http://localhost:5173,https://tu-dominio.com

# ========================================
# LOGGING
# ========================================
LOG_LEVEL=info
LOG_FILE=logs/app.log

# ========================================
# RATE LIMITING
# ========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ========================================
# SWAGGER (DOCUMENTACIÓN API)
# ========================================
SWAGGER_TITLE=AIMEC API
SWAGGER_VERSION=1.0.0
SWAGGER_DESCRIPTION=API REST para el sistema de gestión de productos industriales AIMEC

# ========================================
# ENCRIPTACIÓN
# ========================================
BCRYPT_SALT_ROUNDS=12

# ========================================
# VALIDACIÓN
# ========================================
VALIDATION_STRICT=true
