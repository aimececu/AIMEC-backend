# ========================================
# CONFIGURACIÓN DE ENTORNO
# ========================================
NODE_ENV=development
PORT=3750

# ========================================
# BASE DE DATOS
# ========================================
DB_HOST=yamabiko.proxy.rlwy.net
DB_PORT=18274
DB_NAME=railway
DB_USER=postgres
DB_PASSWORD=tu_password_railway
DB_SCHEMA=aimec_products

# ========================================
# JWT (JSON WEB TOKENS)
# ========================================
JWT_SECRET=tu_jwt_secret_super_seguro
JWT_EXPIRES_IN=24h

# ========================================
# CORS (CROSS-ORIGIN RESOURCE SHARING)
# ========================================
# URLs permitidas para CORS
CORS_ORIGIN=http://localhost:5173,https://tu-dominio.com

# ========================================
# RATE LIMITING
# ========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ========================================
# SWAGGER (DOCUMENTACIÓN API)
# ========================================
SWAGGER_TITLE=AIMEC API
SWAGGER_VERSION=1.0.0
SWAGGER_DESCRIPTION=API REST para el sistema de gestión de productos industriales AIMEC

# ========================================
# ENCRIPTACIÓN
# ========================================
BCRYPT_SALT_ROUNDS=12

# ========================================
# VALIDACIÓN
# ========================================
VALIDATION_STRICT=true

# ========================================
# EMAIL (CORREO ELECTRÓNICO) - SMTP2GO
# ========================================
# Configuración para SMTP2GO (servicio de email transaccional)
SMTP2GO_API_KEY=tu_api_key_de_smtp2go
SMTP2GO_FROM_EMAIL=info@aimec-ec.com
SMTP2GO_FROM_NAME=AIMEC

# Email donde se recibirán los mensajes de contacto
CONTACT_EMAIL=info@aimec-ec.com
