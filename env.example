# ========================================
# CONFIGURACIÓN DE ENTORNO
# ========================================
NODE_ENV=development
PORT=3750

# ========================================
# BASE DE DATOS - DESARROLLO LOCAL
# ========================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=aimec_db
DB_USER=postgres
DB_PASSWORD=tu_password
DB_SCHEMA=public

# ========================================
# BASE DE DATOS - PRODUCCIÓN (RAILWAY)
# ========================================
# Descomenta y configura para producción
# DB_HOST=tu-railway-host.railway.app
# DB_PORT=5432
# DB_NAME=railway
# DB_USER=postgres
# DB_PASSWORD=tu-railway-password
# DB_SCHEMA=public

# ========================================
# JWT (JSON WEB TOKENS)
# ========================================
JWT_SECRET=tu_jwt_secret_super_seguro
JWT_EXPIRES_IN=24h

# ========================================
# AWS (PARA DOMINIO Y ALMACENAMIENTO)
# ========================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=tu_aws_access_key
AWS_SECRET_ACCESS_KEY=tu_aws_secret_key

# ========================================
# ALMACENAMIENTO DE IMÁGENES
# ========================================

# Opción 1: AWS S3 (Recomendado)
AWS_S3_BUCKET=tu-bucket-s3
AWS_S3_REGION=us-east-1

# ========================================
# CORS (CROSS-ORIGIN RESOURCE SHARING)
# ========================================
# URLs permitidas para CORS
CORS_ORIGIN=http://localhost:5173,https://tu-dominio.com

# ========================================
# LOGGING
# ========================================
LOG_LEVEL=info
LOG_FILE=logs/app.log

# ========================================
# RATE LIMITING
# ========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ========================================
# SWAGGER (DOCUMENTACIÓN API)
# ========================================
SWAGGER_TITLE=AIMEC API
SWAGGER_VERSION=1.0.0
SWAGGER_DESCRIPTION=API REST para el sistema de gestión de productos industriales AIMEC

# ========================================
# EMAIL (CORREO ELECTRÓNICO) - ZOHO MAIL
# ========================================
# Configuración SMTP para Zoho Mail (funciona con cuentas gratuitas)
SMTP_HOST=smtp.zoho.com
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=tu-email@zohomail.com
SMTP_PASS=tu-contraseña
SMTP_FROM=tu-email@zohomail.com

# Email donde se recibirán los mensajes de contacto
CONTACT_EMAIL=tu-email@zohomail.com

# NOTAS PARA ZOHO MAIL GRATUITO:
# 1. NO necesitas habilitar IMAP (solo para SMTP)
# 2. Usa tu email y contraseña normal de Zoho Mail
# 3. Si tienes 2FA, desactívalo temporalmente o usa contraseña de aplicación
# 4. Alternativa TLS: SMTP_PORT=587, SMTP_SECURE=false
# 5. Para cuentas @zohomail.com, @zoho.com, @zohocloud.com

# ========================================
# ENCRIPTACIÓN
# ========================================
BCRYPT_SALT_ROUNDS=12

# ========================================
# VALIDACIÓN
# ========================================
VALIDATION_STRICT=true
